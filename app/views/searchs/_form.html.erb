<% if user_signed_in? %>
    <%= form_tag(search_path, method: :get) do %>
    <div class="container mt-4 mb-4">
      <%= text_field_tag 'content' %>
      <%= select_tag 'model', options_for_select({ "User" => "user", "Book" => "book" }) %>
      <%= select_tag 'method', options_for_select({ "完全一致" => "perfect", "部分一致" => "partial_match","前方一致" => "forward_match","後方一致" => "backward_match" }) %>
      <%= submit_tag '検索' %>
    </div>
    <% end %>
<% end %>